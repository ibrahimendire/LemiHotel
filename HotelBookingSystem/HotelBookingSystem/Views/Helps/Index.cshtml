@model IEnumerable<HotelBookingSystem.Models.Help>


@if(User.Identity.IsAuthenticated)
{
    <h1>Help  Requests</h1>
    <table  class="table table-bordered border-primary">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.FirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Issue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HelpText)
                </th>
                <th>Edit</th>
                <th>Detail</th>
                <th class="badge badge-pill badge-danger">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Issue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HelpText)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id"><h3><i class="fas fa-edit"></i></h3></a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id"><h3><i class="fas fa-info-circle"></i></h3></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@item.Id"><h3><i class="fas fa-trash-alt"></i></h3></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
}
else
{
<div class="contacts">
    <h1>Hotel Contants</h1>
 
    <ul>
        <li>Phone <i class="fas fa-phone"></i>: 5555555</li>
        <li>Email <i class="fas fa-envelope-square"></i>:  ibrahim@lemihotel.com</li>
        <li>Address <i class="fas fa-address-card"></i>:  1234 Nw Kansas city</li>

    </ul>
    <p>
        
        <a asp-action="Create">need more Help</a>
    </p>
</div>
}

<style>
    .contacts {
        align-content: center;
        margin:80px;
        padding:150px;
        border:2px solid black;
    }

</style>