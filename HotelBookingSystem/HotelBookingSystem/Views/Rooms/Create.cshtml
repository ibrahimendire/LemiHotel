@model LemiHotel.Models.Room

@{
    ViewData["Title"] = "Create";
}

<h1>Add Room</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Room Number :</label><br />
                <input asp-for="Name" class="form-control"  placeholder="Please Enter Room Number" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label">Room Price :</label><br />
                <input asp-for="Price" class="form-control" placeholder="Please Enter Room Price"/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label">Room Type Id :</label><br />
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Room" class="btn btn-info" />
                <a asp-action="Index" class="btn btn-success"> <i class="fas fa-undo-alt"></i> &nbsp; Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
