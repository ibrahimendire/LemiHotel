@model HotelBookingSystem.Models.RoomCategory


<h1>Add New Room Type</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"> Room Type:</label>
                <input asp-for="Name" class="form-control" placeholder="Please Enter Room Type"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Type" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-success"> <i class="fas fa-undo-alt"></i> &nbsp; Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
