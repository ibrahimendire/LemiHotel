@model IEnumerable<LemiHotel.Models.RoomCategory>

@{
    ViewData["Title"] = "Index";
}

<h1>Room Type List</h1>

<p>
    <a asp-action="Create">Add New Room Type</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Room TypeId
            </th>
            <th>Room Type</th>
            <th>Edit</th>
            <th>Detail</th>
            <th class="badge badge-pill badge-danger">Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Id)</td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
 
            <td> <a asp-action="Edit" asp-route-id="@item.Id"><h3><i class="fas fa-edit"></i></h3></a> </td>
            <td> <a asp-action="Details" asp-route-id="@item.Id"><h3><i class="fas fa-info-circle"></i></h3></a> </td>
            <td> <a asp-action="Delete" asp-route-id="@item.Id"><h3><i class="fas fa-trash-alt"></i></h3></a> </td>
        </tr>
}
    </tbody>
</table>
